<p id="notice"><%= notice %></p>

<h1>Screens</h1>

<table>
  <thead>
    <tr>
      <th>Screen no</th>
      <th>Film playing</th>
      <th>Cinema</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.screen_no %></td>
        <td><%= screen.film_playing %></td>
        <td><%= screen.cinema_id %></td>
        <td><%= link_to 'Show', screen %></td>
        <td><%= link_to 'Edit', edit_screen_path(screen) %></td>
        <td><%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='new'>
<%= link_to 'New Screen', new_screen_path %>
</div>
